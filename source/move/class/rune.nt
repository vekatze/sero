import {
  binary-builder.entity {builder, create, get},
  core.box {axiom-T},
  core.rune.show {show-rune},
  this.move.class.int32 {decode-int32, encode-int32},
  this.move.create-decode-handle {from-bytes},
  this.rule.decode-handle {decode-handle},
  this.rule.marshal {Marshal, marshal},
}

define encode-rune(b: &builder, x: &rune): unit {
  encode-int32(b, magic cast(&rune, &int32, x))
}

define decode-rune(h: &decode-handle): ?meta rune {
  try v = decode-int32(h) in
  Right(box {
    letbox v' = v in
    magic cast(int32, rune, v')
  })
}

inline as-marshal: marshal(rune, rune) {
  Marshal of {
    encode = encode-rune,
    decode = decode-rune,
  }
}

define zen(): unit {
  let buf = create(4) in
  pin val = `ã‚` in
  let _ on buf = encode-rune(buf, val) in
  let b = get(buf) in
  pin h = from-bytes(b) in
  let mval = decode-rune(h) in
  match mval {
  | Left(_) =>
    print("left")
  | Right(v) =>
    printf("value: {}\n", [show-rune(axiom-T(v))])
  }
}
