import {
  core.float.io {print-float-line},
  this.move.common.get {get-int64},
  this.move.common.put {put-float64},
  this.move.decode {decode},
  this.move.encode {encode},
  this.rule.get-kit {get-kit},
  this.rule.put-kit {put-kit},
  this.rule.sero {Sero, sero},
}

define _put(k: &put-kit, x: &float64): unit {
  put-float64(k, *x)
}

define _get(k: &get-kit): ?meta float64 {
  try v = get-int64(k);
  Right(quote {magic cast(int64, float64, v)})
}

inline float64-sero: sero(float64) {
  Sero of {
    put := _put,
    get := _get,
  }
}

define zen(): unit {
  pin val = -3.8;
  match decode(float64-sero, encode(float64-sero, val, 8)) {
  | Left(_) =>
    print("left")
  | Right(v) =>
    print("value: ");
    print-float-line(v, 6);
  }
}
